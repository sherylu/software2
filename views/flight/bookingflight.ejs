<%- include ../partials/banner.ejs %>

<div class="container">
    <div class="col-md-8">

        <div class="row">
            <div class="col-md-8">
                <%- include ../partials/error.ejs %>
            </div>
        </div>

        <div class="panel panel-primary">

            <div class="panel-heading">
                <h3 class="panel-title">Ingrese los datos del cliente</h3>
            </div>

            <div class="panel-body">


                <form class="form-horizontal">
                    <fieldset>

                        <!--NOMBRES-->
                        <div class="form-group">
                            <label class="col-md-4 control-label">Nombres:</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control" id="firstName"/>
                            </div>
                        </div>

                        <br>


                        <!--APELLIDOS-->
                        <div class="form-group">
                            <label class="col-md-4 control-label">Apellidos:</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control" id="lastName"/>
                            </div>
                        </div>

                        <br>

                        <!--IDENTIFICACION-->
                        <div class="form-group">
                            <label class="col-md-4 control-label">Identificacion:</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control" id="identification"/>
                            </div>
                        </div>

                        <br>

                        <!--TELEFONO-->
                        <div class="form-group">
                            <label class="col-md-4 control-label">Número de teléfono:</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control" id="phone"/>
                            </div>
                        </div>

                        <br>

                        <!--EMAIl-->
                        <div class="form-group">
                            <label class="col-md-4 control-label">Email:</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control" id="email"/>
                            </div>
                        </div>


                        <br>

                        <!--RESERVAR VUELO-->
                        <div class="form-group">
                            <div class="col-sm-offset-4 col-sm-4">
                                <button class="btn btn-primary btn-lg btn-block" id="btn-booking">Reservar vuelo
                                </button>
                            </div>
                        </div>

                    </fieldset>
                </form>

            </div>
        </div>
    </div>

    <script>
        $(document).ready(function () {

            $('#btn-booking').click(function () {

                var client = {};
                client.firstName = $('#firstName').val();
                client.lastName = $('#lastName').val();
                client.id = $('#identification').val();
                client.phone = $('#phone').val();
                client.email = $('#email').val();

                $.post("/flight/sendbookingmail", {
                    obj: client
                });

            });
        });
    </script>
