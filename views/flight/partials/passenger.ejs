<div class="panel panel-primary">

<div class="panel-heading">
    <h3 class="panel-title">INGRESE LOS DATOS DEL PASAJERO <%=i+2%></h3>
</div>

<div class="panel-body">


    <form class="form-horizontal">
        <fieldset>

            <!--NOMBRES-->
            <div class="form-group">
                <label class="col-md-4 control-label">Nombres:</label>
                <div class="col-md-8">
                    <input type="text" class="form-control" id="firstName<%=i%>"/>
                </div>
            </div>

            <br>


            <!--APELLIDOS-->
            <div class="form-group">
                <label class="col-md-4 control-label">Apellidos:</label>
                <div class="col-md-8">
                    <input type="text" class="form-control" id="lastName<%=i%>"/>
                </div>
            </div>

            <br>

            <!--IDENTIFICACION-->
            <div class="form-group">
                <label class="col-md-4 control-label">Identificacion:</label>
                <div class="col-md-8">
                    <input type="text" class="form-control" id="identification<%=i%>"/>
                </div>
            </div>

            <br>

            <!--EDAD-->
            <div class="form-group">
                <label class="col-md-4 control-label">Edad:</label>
                <div class="col-md-8">
                    <input type="number" class="form-control" id="age<%=i%>"/>
                </div>
            </div>

            <br>

            <!--DISCAPACIDAD-->
            <div class="form-group">
                <label class="col-md-3 control-label">Discapcidad:</label>

                <div class="checkbox col-md-2">
                  <label><input type="checkbox" value="" id >Aplica</label>
                </div>
                
                <label class="col-md-3 control-label">Porcentaje:</label>
                <div class="col-md-4">
                    <input disabled type="number" class="form-control" id="handicap<%=i%>"/>
                </div>
            </div>


            <br>


        </fieldset>
    </form>

</div>
</div>
